{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2015"],
    "noEmit": false,
    "skipLibCheck": false,
    "typeRoots": ["node_modules/@types", "src/types"]
  }
}
